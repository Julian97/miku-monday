# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Miku GIF Path (optional - uses default if not specified)
MIKU_GIF_PATH=./its-miku-monday.gif

# Developer Chat ID (optional - for receiving feedback)
# DEVELOPER_CHAT_ID=your_chat_id_here

# Chat IDs Encryption Key (for production, set this in your deployment environment)
# CHAT_IDS_ENCRYPTION_KEY=your_encryption_key_here

# Redis Connection String (optional - for persistent storage across deployments)
# REDIS_CONNECTION_STRING=redis://localhost:6379

# Redis Password (optional - for authenticated Redis instances)
# REDIS_PASSWORD=your_redis_password_here

# Development mode (set to 'development' to enable test scheduling)
NODE_ENV=production

# Port for the web server (optional - defaults to 3000)
# PORT=3000